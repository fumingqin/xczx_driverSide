<view class="content"><text class="titleClass">{{title}}</text><image class="returnClass" src="../../static/grzx/btnReturn.png" data-event-opts="{{[['tap',[['returnClick',['$event']]]]]}}" bindtap="__e"></image><image class="navClass" src="../../static/grzx/nav1.png"></image><view class="boxClass"><view class="inputItem"><image class="iconClass1" src="../../static/grzx/phone.png"></image><input class="inputClass" type="number" placeholder="手机号码" maxlength="11" data-key="phoneNumber" data-event-opts="{{[['input',[['inputChange',['$event']]]],['blur',[['leavePhone',['$event']]]]]}}" bindinput="__e" bindblur="__e"/></view><view class="inputItem"><image class="iconClass2" src="../../static/grzx/password.png"></image><input class="inputClass" password="true" placeholder="请输入密码(6-20位)" maxlength="20" data-key="password" data-event-opts="{{[['input',[['inputChange',['$event']]]],['blur',[['leavePwd',['$event']]]]]}}" bindinput="__e" bindblur="__e"/></view><view class="inputItem"><image class="iconClass3" src="../../static/grzx/code.png"></image><input class="inputClass" type="number" placeholder="验证码" maxlength="4" data-key="code" data-event-opts="{{[['input',[['inputChange',['$event']]]]]}}" bindinput="__e"/><view class="codeClass" id="Code" data-event-opts="{{[['tap',[['getCodeClick',['$event']]]]]}}" bindtap="__e">{{textCode}}</view></view><view data-event-opts="{{[['tap',[['nextClick',['$event']]]]]}}" class="nextClass" bindtap="__e">下一步</view></view></view>